<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="540.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.javafxtest.GameController">
   <children>
      <!-- Основное фоновое изображение (нижний слой) -->
      <ImageView fx:id="backgroundImageView" fitHeight="1080.0" fitWidth="1920.0" pickOnBounds="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <Image url="@images/background/MainMenuBackground1.png" />
      </ImageView>

      <!-- Второе фоновое изображение (верхний слой, для анимации) -->
      <ImageView fx:id="nextBackgroundImageView" fitHeight="1080.0" fitWidth="1920.0" opacity="0" pickOnBounds="true" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />

      <!-- Название игры -->
      <ImageView fx:id="logoImageView" fitHeight="400.0" fitWidth="750.0" pickOnBounds="true" preserveRatio="true" AnchorPane.rightAnchor="80.0" AnchorPane.topAnchor="80.0">
         <Image url="@images/buttons/logo.png" />
      </ImageView>

      <!-- Кнопка "Играть" -->
      <Button fx:id="play" mnemonicParsing="false" onAction="#onPlayBtnClick" style="-fx-background-color: transparent; -fx-padding: 0;" AnchorPane.bottomAnchor="430.0" AnchorPane.leftAnchor="50.0">
         <graphic>
            <ImageView fitHeight="110.0" fitWidth="500.0" preserveRatio="true">
               <Image url="@images/buttons/game_button.png" />
            </ImageView>
         </graphic>
      </Button>

      <!-- Кнопка "Настройки" -->
      <Button fx:id="options" mnemonicParsing="false" onAction="#onOptionsBtnClick" style="-fx-background-color: transparent; -fx-padding: 0;" AnchorPane.bottomAnchor="300.0" AnchorPane.leftAnchor="50.0">
         <graphic>
            <ImageView fitHeight="110.0" fitWidth="500.0" preserveRatio="true">
               <Image url="@images/buttons/options_button.png" />
            </ImageView>
         </graphic>
      </Button>

      <!-- Кнопка "Выход" -->
      <Button fx:id="exit" mnemonicParsing="false" onAction="#onExitBtnClick" style="-fx-background-color: transparent; -fx-padding: 0;" AnchorPane.bottomAnchor="170.0" AnchorPane.leftAnchor="50.0">
         <graphic>
            <ImageView fitHeight="110.0" fitWidth="500.0" preserveRatio="true">
               <Image url="@images/buttons/exit_button.png" />
            </ImageView>
         </graphic>
      </Button>
   </children>
</AnchorPane>
